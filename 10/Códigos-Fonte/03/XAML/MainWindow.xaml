<Window x:Class="XAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    
    <DockPanel>
        <StackPanel Orientation="Vertical" Margin="0,0,400,0" DockPanel.Dock="Top">
            <Button Content="Botão 1" Width="100" Height="30" Margin="0,10,0,0" />
            <Button Content="Botão 2" Width="100" Height="30" Margin="0,10,0,0" />
            <Button Content="Botão 3" Width="100" Height="30" Margin="0,10,0,0" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Margin="0,100,0,0" DockPanel.Dock="Bottom">
            <Button Content="Botão 1" Width="100" Height="30" Margin="10,0,0,0" />
            <Button Content="Botão 2" Width="100" Height="30" Margin="10,0,0,0" />
            <Button Content="Botão 3" Width="100" Height="30" Margin="10,0,0,0" />
        </StackPanel>
    </DockPanel>
</Window>
