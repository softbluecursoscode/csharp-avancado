<Window x:Class="UserInterface2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Texto" Height="350" Width="525" MinWidth="200" MinHeight="200">
    
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Button Content="&gt;" Width="50" Height="30" Margin="3,0,10,0" />
            <Button Content="&lt;" Width="50" Height="30" Margin="3,10,10,0"/>
        </StackPanel>
        
        <TextBox Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" />
        
        <Button Content="Sair" Grid.Row="1" Grid.Column="0" Width="50" Height="30" Margin="3,0,10,0" />
    </Grid>
</Window>
