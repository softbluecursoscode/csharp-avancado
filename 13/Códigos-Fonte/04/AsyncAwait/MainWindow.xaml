<Window x:Class="AsyncAwait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aplicação" Height="295" Width="525" ResizeMode="NoResize">
    
    <StackPanel VerticalAlignment="Top">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnExecutar" Content="Executar" Width="100" Height="30" DockPanel.Dock="Top" Margin="0,10,0,0" Click="btnExecutar_Click" />
            <Button x:Name="btnLimpar" Content="Limpar" Width="100" Height="30" DockPanel.Dock="Top" Margin="10,10,0,0" Click="btnLimpar_Click" />
        </StackPanel>
        <ScrollViewer>
            <TextBox x:Name="txtResult" Height="200" Margin="3,10,3,0" IsReadOnly="True" />
        </ScrollViewer>
    </StackPanel>
</Window>
